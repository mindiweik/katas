{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
  ]
}
